{
    "extends": "@io-platform/dev-config/tsconfig/tsconfig",
    "compilerOptions": {
        "declaration": true,
        "declarationDir": "dist/types",
        "declarationMap": false,
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "sourceMap": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        },
        "types": ["vite/client"],
        "outDir": "./dist/esm",
        "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "tests", "dist"]
}
